<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image Source="/MainPageImg.png" Stretch="Fill" HorizontalAlignment="Stretch" Height="NaN" VerticalAlignment="Stretch" Width="NaN"/>
        <Label Content="MORTAL KOMBAT X" HorizontalAlignment="Center" Height="54" Margin="0,30,0,0" VerticalAlignment="Top" Width="286" FontFamily="Showcard Gothic" FontSize="28" Background="Transparent" Foreground="White"/>
        <TextBox x:Name="UsernameBox" HorizontalAlignment="Center" Height="35" Margin="0,361,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="228" Background="#00000000" Foreground="White" BorderBrush="White" FontSize="14" TextChanged="TextBox_TextChanged" FontWeight="Bold" FontFamily="Book Antiqua"/>
        <Button x:Name="Login_Button" HorizontalAlignment="Left" Height="32" Margin="514,361,0,0" VerticalAlignment="Top" Width="41" Click="Button_Click" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/arrow.png"/>
            </Button.Background>
        </Button>
        <Image Margin="222,359,505,17" Source="/username_icon.png"  RenderTransformOrigin="0.536,0.149"/>
        <Label Content="ENTER USERNAME" HorizontalAlignment="Center" Height="32" Margin="0,330,0,0" VerticalAlignment="Top" Width="186" Foreground="White" FontSize="18" FontFamily="Perpetua Titling MT" FontWeight="Bold"/>
        <Button x:Name="Add_Client_Button" Content="Button" HorizontalAlignment="Left" Height="66" Margin="697,0,0,0" VerticalAlignment="Top" Width="69" BorderBrush="{x:Null}" Click="Add_Client_Button_Click">
            <Button.Background>
                <ImageBrush ImageSource="/add_client_img.png"/>
            </Button.Background>
            <Button.Foreground>
                <ImageBrush/>
            </Button.Foreground>
        </Button>
        <Label Content="ADD CLIENT" HorizontalAlignment="Left" Height="35" Margin="694,53,0,0" VerticalAlignment="Top" Width="89" Foreground="White" FontFamily="Consolas" FontWeight="Bold"/>
        <Label x:Name="LoginSuccess_Label" Content="Login Succesful..." HorizontalAlignment="Left" Height="28" Margin="337,388,0,0" VerticalAlignment="Top" Width="137" Foreground="#FF3FFF0B" Visibility="Collapsed"/>
        <Label x:Name="LoginFailure_Label" Content="Login Fail..." HorizontalAlignment="Left" Height="28" Margin="353,388,0,0" VerticalAlignment="Top" Width="137" Foreground="#FFFF0D0D" Visibility="Collapsed"/>

    </Grid>
</Window>
